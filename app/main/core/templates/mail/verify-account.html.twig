{% extends "mail/base.html.twig" %}
	
{% block domain %}
	<table align="center" cellpadding="0" cellspacing="0" class="android-container" width="100%">
		<tr>
			<td align="left" valign="top" width="100%" style="background: repeat-x url(http://s3.amazonaws.com/swu-filepicker/4E687TRe69Ld95IDWyEg_bg_top_02.jpg) #ffffff;">
				<center>
					<img src="http://s3.amazonaws.com/swu-filepicker/SBb2fQPrQ5ezxmqUTgCr_transparent.png" class="force-width">
					<table cellspacing="0" cellpadding="0" width="100%" bgcolor="#fffff" background="http://s3.amazonaws.com/swu-filepicker/4E687TRe69Ld95IDWyEg_bg_top_02.jpg" style="background-color: transparent;">
						<tr>
							<td width="100%" height="80" valign="top" style="text-align: center; vertical-align: middle;">
								<center>
									<table cellpadding="0" cellspacing="0" width="600" class="w320">
										<tr>
											<td class="pull-left mobile-header-padding-left" style="vertical-align: middle;">
												<a href=""><img src="{{ site.uri.public }}/assets/img/icon/brand.png" width="137" height="47"></a>
											</td>
											<td class="pull-right mobile-header-padding-right" style="color: #4d4d4d">
												<a href=""><img width="44" height="47" src="http://s3.amazonaws.com/swu-filepicker/k8D8A7SLRuetZspHxsJk_social_08.gif" alt="twitter"></a>
												<a href=""><img width="38" height="47" src="http://s3.amazonaws.com/swu-filepicker/LMPMj7JSRoCWypAvzaN3_social_09.gif" alt="facebook" /></a>
											</td>
										</tr>
									</table>
								</center>
							</td>
						</tr>
						<tr>
							<td align="center" valign="top" width="100%" style="background-color: #f7f7f7;" class="content-padding">
								<center>									
									<table cellpadding="0" cellspacing="0" width="600" class="w320 wrapper">
										<tbody>
											<tr>
												<td class="header-lg">歡迎加入 {{ site.title }} 甜點空間</td>
											</tr>
											<tr>								
												<td class="free-text"><strong> {{ user.username }} </strong>會員你好</td>
											</tr>
											<tr>
												<td>
													<h5 clas="text-caption">歡迎成為{{ site.title }}甜點空間</h5>
												</td>
											</tr>
											<tr>
												<td>
													<p class="callout" style="margin: 0;">請點選下方按鈕進行會員認證</p>
												</td>
											</tr>
											<tr>
												<td class="btn">
													<div>
														<a href="{{ site.uri.public }}/client/verify-account?token={{ token }}" class="btn-verify btn-mobile">認證</a>
													</div>
												</td>
											</tr>
										</tbody>									
									</table>
								</center>
							</td>
						</tr>
					</table>
				</center>
			</td>
		</tr>
		<tr>
			<td align="center" valign="top" width="100%" class="footer">
				<center>
					<table cellpadding="0" cellspacing="0" width="600" class="w320">
						<td style="padding: 25px 0 25px">
							<p><strong>{{ site.title }}</strong></p>
							<p>&copy; 2018 AG. All Rights Reserved.</p>
						</td>
					</table>
				</center>
			</td>
		</tr>
	</table>
