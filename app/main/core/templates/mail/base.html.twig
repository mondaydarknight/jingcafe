		    border-left-width: 0px;
		    border-top-style: solid;
		    border-right-style: solid;
		    border-bottom-style: solid;
		    border-left-style: solid;
		    width: 80px;
		}

		.lock {
			position: relative;
			background-image: url(https://g.cdn1.mega.co.nz/3/images/mega/encr-sprite_v1.png);
		    background-position: 200px -740px;
		    background-repeat: no-repeat;
		    background-size: inherit;
		    text-align: center;
		    height: 80px;
		    width: 100%;
		}


		strong {
			font-family: medium-content-sans-serif-font, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif, Microsoft JhengHei;
			font-weight: 700;
			letter-spacing: 0;
		    font-style: normal;
		    font-size: 16px;
		    line-height: 24px;
		    color: #676767;
		    /*color: rgba(0,0,0,.84);*/
		    text-rendering: optimizeLegibility;
		    -webkit-font-smoothing: antialiased;
		    -moz-osx-font-smoothing: grayscale;
		    -moz-font-feature-settings: "liga" on;
		}

		.headline {
			font-family: Helvetica,Arial,sans-serif, Microsoft JhengHei;
    		font-size: 24px;
    		line-height: 31px;
    		color: #777777 !important;
    		padding: 0;
    		margin: 28px 0 32px 0;
    		font-weight: 400;
    		text-align: center;
    		text-decoration: none;
		}

		.text-content {
			font-family: medium-content-sans-serif-font, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif, Microsoft JhengHei;
    		line-height: 20px;
    		color: #3f4047;
    		padding: 0;
    		margin: 10px 0;
    		padding: 10px 0;
		}

		.text-light {
			font-size: 14px;
			font-family: medium-content-sans-serif-font, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif, Microsoft JhengHei;
			font-weight: 500;
			line-height: 1.2;
			color: #9699a2;
			vertical-align: baseline;
		}

		.text-caption {
			font-size: 20px;
			font-weight: 700;
			font-family: medium-content-sans-serif-font, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI","Noto Sans TC","Yu Gothic",YuGothic,sans-serif;
			color: #3f4047;
			letter-spacing: 0.3em;
			text-transform: uppercase;
			text-align: center;
			line-height: 1.2;
			word-break: break-word;
		}

		.mark {
			display: inline-block;		    
		    font-family: medium-content-sans-serif-font, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI","Noto Sans TC","Yu Gothic",YuGothic,sans-serif;
		    font-size: 16px;
		    line-height: 1.3;
		    margin-top: 4px;
		    color: #757575;
		    font-weight: 500;		    
		    overflow: hidden;
		    vertical-align: baseline;
		    white-space: nowrap;
		    text-rendering: optimizeLegibility;
		}

		p, ul {
			margin-bottom: 10px;
			font-weight: normal;
			font-size: 14px;
			line-height: 1.6;
		}

		p.lead {
			font-size: 16px;
			color: #333;
			line-height: 1.2;
			padding: 0;
			margin: 15px 0;
		}

		p.last {
			margin-bottom: 0px;
		}

		ul li {
			margin-left: 5px;
			list-style-position: inside;
		}

		.alert {
			position: relative;
			padding: 0.75rem 1.25rem;
			margin-bottom: 1rem;
			border: 1px solid transparent;
			border-radius: 0.25rem;
		}

		.alert.alert-danger {
			color: #792d2d;
			background-color: #fadddd;
			border-color: #f9d0d0;
		}

		.alert a {
			font-weight: bold;
			color: #2ba6cb;
		}

		p.callout {
			padding: 15px;
			background-color: #ecf8ff;
			margin-bottom: 15px;
		}

		.callout a {
			font-weight: bold;
			color: #2ba6cb;
		}

		.outlook a {
			padding: 0;
		}

		.read-message-body {
			width: 100%;
		}

		table {
			border-collapse: collapse !important;
		}

		table td {
			border-collapse: collapse;
		}

		.table-bg {
			margin: 0 auto;
			padding: 0;
			width: 100% !important;
		}

		td {
			font-family: medium-content-sans-serif-font, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif, Microsoft JhengHei;
			font-size: 14px;
			color: #777777;
			text-align: center;
			line-height: 21px;
		}

		table.social {
			background: #ebebeb;
		}

		.social .btn {
			padding: 3px 7px;
			font-size: 12px;
			margin-bottom: 10px;
			text-decoration: none;
			color: #ffffff;
			font-weight: bold;
			display: block;
			text-align: center;
			cursor: pointer;
		}

		a.facebook {
			background: #3d5998 !important;
		}

		a.google {
			background: #dd4b39 !important;
		}

		a.twitter {
			background: #55acee !important;
		}

		.sidebar .btn {
			display: block;
			width: 100%;
		}

		.android-container {
			min-width: 600px;
		}

		.header-lg,
		.header-md,
		.header-sm {
			font-size: 32px;
			font-weight: 700;
			line-height: normal;
			padding: 35px 0 0;
			color: #4d4d4d;
		}

		.header-md {
			font-size: 24px;
		}

		.header-sm {
			padding: 5px 0;
			font-size: 18px;
			line-height: 1.3;
		}


		.footer {
			background-color: #ffffff; 
			height: 100px; 
			border-top: 1px solid #e5e5e5;
		}

		.content-padding {
			padding: 20px 0 30px;
		}

		.mobile-header-padding-left {
			width: 290px;
			text-align: left;
			padding-left: 10px;	
		}

		.collapse {
			margin: 0 !important;
		}

		.mobile-header-padding-right {
			width: 290px;
			text-align: right;
			padding-left: 10px;
		}

		.free-text {
			width: 100% !important;
			padding: 10px 60px 0;
		}

		.block-rounded {
			border-radius: 5px;
			vertical-align: top;
		}

		.info {
			margin: 10px 0;
			border-top: 3.4px dashed #ebedf2;
			border-bottom: 3.6px dashed #ebedf2;		
		}

		.info-block {
			margin-bottom: 15px;
			padding: 0 20px;
		}

		.info-img {
			width: 250px;
			border-radius: 5px 5px 0 0;
		}

		.link {
			display: inline-block;
			position: relative;
			color: #FE980F;
			font-size: 16px;
			text-align: center;
			text-decoration: none !important;
			cursor: pointer;
			line-height: 1.2;
			overflow: hidden;
			text-overflow: ellipsis;
			vertical-align: middle;
			word-wrap: break-word;
    		word-break: break-all;
    		text-rendering: none;
			-webkit-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
			user-select: none;
			-webkit-box-sizing: border-box;
			box-sizing: border-box;
			letter-spacing: 0;
			font-style: normal;
			text-rendering: optimizeLegibility;
			-webkit-font-smoothing: antialiased;
			-moz-osx-font-smoothing: grayscale;
			-moz-font-feature-settings: "liga" on;
			font-family: medium-content-sans-serif-font, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif, Microsoft JhengHei;
		}

		.btn {
			text-decoration:none;
		  	color: #ffffff;
		  	font-weight: bold;
		  	margin-right: 10px;
		  	text-align: center;
		  	cursor: pointer;
		  	/*padding: 10px 16px;*/
		  	padding: 30px 0;
		}

		.btn-width {
			width: 228px;
		}
		.btn-verify {
			font-family: medium-content-sans-serif-font, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif, Microsoft JhengHei;
			font-size: 16px;
			background-color: #FE980F;
			color: #ffffff;
			text-align: center;
			line-height: 45px;
			border-radius: 5px;
			display: inline-block;
			font-weight: normal;
			text-align: center;
			text-decoration: none;
			width: 155px;
			-webkit-text-size-adjust: none;
			mso-hide: all; 
		}

		.force-width {
			height: 0px !important;
			line-height: 1px !important;
			font-size: 1px !important;
		}

		
		/* ------------------------------------- 
		    SIDEBAR 
		------------------------------------- */
		ul.sidebar {
		  	margin-left: 30px;
		  	background:#ebebeb;
		  	display:block;
		  	list-style-type: none;
		}
		ul.sidebar li { 
			display: block; 
			margin:0;
		}

		ul.sidebar li a {
		  	color: #666;
		  	padding:10px 16px;
		  	margin-right:10px;
		  	text-decoration:none;
		  	text-align:center; 
		  	font-weight:bold; 
		  	cursor:pointer;
		  	border-bottom: 1px solid #d6d6d6;
		  	border-top: 1px solid #FFFFFF;
		  	display:block;
		  	margin:0;
		}
		
		ul.sidebar li a.last { 
			border-bottom-width:0px;
		}
		
		ul.sidebar li a h1,
		ul.sidebar li a h2,
		ul.sidebar li a h3,
		ul.sidebar li a h4,
		ul.sidebar li a h5,
		ul.sidebar li a h6,
		ul.sidebar li a p { 
			margin-bottom:0!important;
		}

		.list-view {
			position: relative;
			padding: 0;
			margin: 20px 0;
			width: 100%;			
			list-style: none outside none;
			background-color: rgba(69, 65, 78, 0.08);
			-webkit-box-shadow: 0px 1px 15px 1px rgba(69, 65, 78, 0.08);
			-moz-box-shadow: 0px 1px 15px 1px rgba(69, 65, 78, 0.08);
		    box-shadow: 0px 1px 15px 1px rgba(69, 65, 78, 0.08) !important;
		    border-radius: 2px;
			transform-origin: center;
			transition: 0.4s cubic-bezier(0.28, 0.55, 0.385, 1.65);
			transition-delay: .5s;
			border-spacing: 0;
			border-collapse: collapse;
			vertical-align: top;	
		}

		.list-view .list-view-wrap {
			position: relative;
			border: 1px solid #ebedf2;
			background-color: #ffffff;
			padding: 0.5em;
		}

		.list-view .list-view-item {
		    margin: 0;
		    border-bottom: 1px solid #ebedf2;
		    text-align: center;
		    vertical-align: top;
			padding: 1.2rem 0;
		}

		.list-view .list-view-item-link {
			overflow: hidden;
			text-overflow: ellipsis;
			word-break: break-word;
			text-decoration: none !important;
			color: #575962;
			font-size: .9rem;
			font-weight: 500;
			line-height: 1.2;
			vertical-align: bottom;
		    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI","Noto Sans TC","Yu Gothic",YuGothic,sans-serif;			
		}

		.list-view .product-item {
			width: 200px;
		}

		@media only screen and (max-width: 600px) {
			.list-view .product-item {
				width: 150px;
			}
		}

		


		/* --------------------------------------------------- 
		    RESPONSIVENESS
		    Nuke it from orbit. It's the only way to be sure. 
		------------------------------------------------------ */

		/* Set a max-width, and make it display as block so it will automatically stretch to that width, but will also shrink down on a phone or something */
		.container {
		  	display: block !important;
		  	max-width: 600px !important;
		  	margin: 0 auto !important; /* makes it centered */
		  	clear: both !important;
		}

		/* This should also be a block element, so that it will fill 100% of the .container */
		.content {
		  	padding:15px;
		  	max-width:600px;
		  	margin:0 auto;
		  	display:block; 
		}

		.wrapper {
			position: relative;
			border: 1px solid #ebedf2;
			border-radius: 4px !important;
			min-height: 380px;
			margin: 0;
			padding: 32px 63px 0 63px;
			-webkit-box-shadow: 0px 1px 15px 1px rgba(69, 65, 78, 0.08);
			-moz-box-shadow: 0px 1px 15px 1px rgba(69, 65, 78, 0.08);
			box-shadow: 0px 1px 15px 1px rgba(69, 65, 78, 0.08);
			background-color: #ffffff;
			transition: all 0.4s ease-in-out;
		}

		.main-content {
			position: relative;
			display: block;
			margin: 0;
			padding: 22px 63px;	
			clear: both;
		}


		/* Let's make sure tables in the content area are 100% wide */
		.content table { 
			width: 100%; 
		}

		/* Odds and ends */
		.column {
		  	width: 300px;
		  	float:left;
		}

		.column-separator {
			border-right: 1px solid #d6d6d6;
		}

		.column tr td { 
			padding: 15px; 
		}
		
		.column-wrap { 
		  	padding:0!important; 
		  	margin:0 auto; 
		  	max-width:600px!important;
		}

		.column table { 
			width:100%;
		}

		.social .column {
		  	width: 280px;
		  	min-width: 279px;
		  	float:left;
		}

		.external * {
			line-height: 115%;
		}
		
		.pull-left {
			float: left;
		}

		.pull-right {
			float: right;
		}

		/* Be sure to place a .clear element after each set of columns, just to be safe */
		.clear { 
			display: block; 
			clear: both; 
		}


		/* ------------------------------------------- 
		    PHONE
		    For clients that support media queries.
		    Nothing fancy. 
		-------------------------------------------- */
		@media only screen and (max-width: 600px) {
		  	a[class="btn"] { 
		  		display: block !important; 
		  		margin-bottom: 10px !important; 
		  		background-image: none !important; 
		  		margin-right: 0 !important;
		  	}

		  	table[class="column"],
		  	div[class="column"] { 
		  		width: auto !important; 
		  		float: none !important;
		  	}
		  	
		  	table.social table[class="column"],
		  	table.social div[class="column"] {
		   		width:auto!important;
		  	}
		}

	</style>
	<style type="text/css" media="screen">
		@import url(http://fonts.googleapis.com/css?family=Oxygen:400,700);
	</style>
	<style type="text/css" media="screen">
		@media screen {
			* {
				font-family: 'Oxygen', 'Helvetica Neue', 'Arial', 'sans-serif', Microsoft JhengHei !important;
			}
		}
	</style>
