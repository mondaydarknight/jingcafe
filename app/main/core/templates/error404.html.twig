  			var errorDropdown = document.querySelector('.error-dropdown');
  			var errorBtnClose = errorDropdown.querySelector('.error-btn-close');

  			var dropdownDialog = (function() {
  				var isActive = false;

  				return {
  					toggleDropdown(event) {
  						isActive = !isActive;
  						return errorDropdown.style.display = isActive ? 'block' : 'none';
  					},

  					closeDropdown(event) {
  						isActive = false;
  						return errorDropdown.style.display = 'none';
  					}
  				};

  				return function(event) {
  					isActive = !isActive;
  					errorDropdown.style.display = isActive ? 'block' : 'none';
  				};
  			})();

  			document.addEventListener('DOMContentLoaded', function() {
  				errorIcon.onclick = dropdownDialog.toggleDropdown;
  				errorBtnClose.onclick = dropdownDialog.closeDropdown;
  			});

